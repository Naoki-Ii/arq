<body>
  <h1>受付管理ログイン</h1>
  <%= form_for(:session, url: login_path) do |f| %>
    <ul>
      <li>
        <%= f.label :name, "オフィス名" %>
      </li>
      <li>
        <%= f.text_field :name, placeholder: "オフィス名を入力してください" %>
      </li>
      <li>
        <%= f.label :password, "パスワード" %>
      </li>
      <li>
        <%= f.password_field :password, placeholder: 'パスワードを入力してください' %>
      </li>
      <li>
        <%= f.submit 'ログイン' %>
      <li>
    </ul>
  <% end %>
</body>
